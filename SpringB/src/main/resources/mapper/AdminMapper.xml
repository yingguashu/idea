<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demod.dao.AdminMapper">

    <sql id="adminsql">
        id,name,password,perms,datetime,update_time,deleted
    </sql>
    <insert id="add" parameterType="com.example.demod.pojo.Admin">
        insert into admin
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                name,
            </if>
            <if test="password!=null">
                password,
            </if>
            <if test="perms!=null">
                perms,
            </if>
            <if test="dateTime!=null">
                datetime,
            </if>
            <if test="updateTime!=null">
                update_time,
            </if>
            deleted,
        </trim>
        <trim prefix=" values (" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                #{name},
            </if>
            <if test="password!=null">
                #{password},
            </if>
            <if test="perms!=null">
                #{perms},
            </if>
            <if test="dateTime!=null">
                #{dateTime},
            </if>
            <if test="updateTime!=null">
                #{updateTime},
            </if>
            0,
        </trim>
    </insert>

    <select id="finAll" resultType="com.example.demod.pojo.Admin" >
        select
        <include refid="adminsql"/>
        from admin
    </select>
</mapper>