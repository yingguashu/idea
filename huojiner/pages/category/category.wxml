<view class="cates">
    <SearchInput></SearchInput>
    <view class="cates_container">
        <!-- 左侧菜单 -->
        <scroll-view class="left_menu" scroll-y>
          <view class="menu_item {{index===currentIndex?'active':''}}" wx:for="{{leftList}}" wx:key="*this" bindtap="handleItemTap" data-index="{{index}}">
            {{item}}
          </view>
        </scroll-view>
        <!-- 右侧商品 -->
        <scroll-view class="right_menu" scroll-y scroll-top="{{scrollTop}}">
          <view class="goods_group" wx:for="{{rightList}}" wx:for-index="index1" wx:for-item="item1" wx:key="cat_id">
            <view class="goods_title">
            <test class="delimiter">/</test>
            <test class="title">{{item1.cat_name}}</test>
            <test class="delimiter">/</test>
            </view>
            <view class="goods_list">
              <navigator wx:for="{{item1.children}}" wx:for-index="index2" wx:for-item="item2" wx:key="cat_id" url="../goods_list/goods_list?cid={{item2.cat_id}}">
                <image mode="widthFix" src="{{item2.cat_icon}}"></image>
                <view class="goods_name">{{item2.cat_name}}</view>
              </navigator>
            </view>
          </view>
        </scroll-view>
    </view>
      
</view>
  